
@{
    ViewBag.Title = "ActualizarVehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Vehiculo/Actualizar" method="post">
    <div class="card border-success mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Actualizar Vehiculo</h5>
            <button onclick="location.href = '@Url.Action("Vehiculo", "Vehiculo")'; return false;" class="btn btn-outline-light btn-sm">Regresar</button>
        </div>

        <div class="card-body bg-light">
            <div class="mb-3">
                <label for="vehicle_id" class="form-label">Código del Vehiculo</label>
                <input value="@Model.Tables[0].Rows[0]["vehicle_id"].ToString()" type="text" class="form-control" disabled />
                <input type="hidden" name="vehicle_id" value="@Model.Tables[0].Rows[0]["vehicle_id"].ToString()" />
            </div>

            <div class="mb-3">
                <label for="license_plate" class="form-label">Placa</label>
                <input value="@Model.Tables[0].Rows[0]["license_plate"].ToString()" type="text" required class="form-control" id="license_plate" name="license_plate" />
            </div>

            <div class="mb-3">
                <label for="brand" class="form-label">Marca</label>
                <input value="@Model.Tables[0].Rows[0]["brand"].ToString()" type="text" required class="form-control" id="brand" name="brand" />
            </div>

            <div class="mb-3">
                <label for="model" class="form-label">Modelo</label>
                <input value="@Model.Tables[0].Rows[0]["model"].ToString()" type="text" required class="form-control" id="model" name="model" />
            </div>

            <div class="mb-3">
                <label for="color" class="form-label">Color</label>
                <input value="@Model.Tables[0].Rows[0]["color"].ToString()" type="text" required class="form-control" id="color" name="color" />
            </div>

            <div class="mb-3">
                <label for="vehicle_type" class="form-label">Tipo de Vehiculo</label>
                <input value="@Model.Tables[0].Rows[0]["vehicle_type"].ToString()" type="text" required class="form-control" id="vehicle_type" name="vehicle_type" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success" onclick="validarGuardadoVehiculo();">Guardar</button>
            </div>
        </div>
    </div>
</form>

