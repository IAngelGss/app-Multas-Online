@{
    ViewBag.Title = "ActualizarSancion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/Sancion/Actualizar" method="post">
    <div class="card border-success mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Actualizar Sanción</h5>
            <button onclick="location.href = '@Url.Action("Sancion", "Sancion")'; return false;" class="btn btn-outline-light btn-sm">Regresar</button>
        </div>

        <div class="card-body bg-light">
            <div class="mb-3">
                <label for="sanction_id" class="form-label">Código de la Sanción</label>
                <input value="@Model.Tables[0].Rows[0]["sanction_id"].ToString()" type="text" class="form-control" disabled />
                <input type="hidden" name="sanction_id" value="@Model.Tables[0].Rows[0]["sanction_id"].ToString()" />
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Descripción de la Sanción</label>
                <input value="@Model.Tables[0].Rows[0]["description"].ToString()" type="text" required class="form-control" id="description" name="description" />
            </div>

            <div class="mb-3">
                <label for="sanction_type" class="form-label">Tipo de la Sanción</label>
                <input value="@Model.Tables[0].Rows[0]["sanction_type"].ToString()" type="text" required class="form-control" id="sanction_type" name="sanction_type" />
            </div>

            <div class="mb-3">
                <label for="cost" class="form-label">Costo de la Sanción</label>
                <input value="@Model.Tables[0].Rows[0]["cost"].ToString()" type="text" required class="form-control" id="cost" name="cost" />
            </div>

            <div class="mb-3">
                <label for="created_at" class="form-label">Fecha de la Sanción</label>
                <input value="@Model.Tables[0].Rows[0]["created_at"].ToString()" type="text" class="form-control" disabled />
                <input type="hidden" name="created_at" value="@Model.Tables[0].Rows[0]["created_at"].ToString()" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success" onclick="validarGuardado();">Guardar</button>
            </div>
        </div>
    </div>
</form>
