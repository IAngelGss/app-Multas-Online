<form action="/Agente/Guardar" method="post">
    <div class="card border-success mb-3 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Nuevo Agente</h5>
            <button onclick="location.href = '@Url.Action("Agente", "Agente")'; return false;" class="btn btn-outline-light btn-sm">Regresar</button>
        </div>

        <div class="card-body bg-light">

            <div class="mb-3">
                <label for="full_name" class="form-label">Nombre del Agente</label>
                <input type="text" required class="form-control" id="full_name" name="full_name" />
            </div>

            <div class="mb-3">
                <label for="id_number" class="form-label">Identificación Agente</label>
                <input type="text" required class="form-control" id="id_number" name="id_number" />
            </div>

            <div class="mb-3">
                <label for="rank_level" class="form-label">Nivel de Rango</label>
                <input type="text" required class="form-control" id="rank_level" name="rank_level" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success" onsubmit="validarGuardadoAgente();">Guardar</button>
            </div>
        </div>
    </div>
</form>




